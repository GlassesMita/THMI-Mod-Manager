root = true

[*]
indent_style = space
indent_size = 4
end_of_line = crlf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{csproj,csproj,nuspec,props,targets,ruleset,config,xml,yml,yaml,json,js,ts,css,scss,less,html,htm,razor,cshtml,vb,fs,vbproj,fsproj}]
indent_size = 2

[{*.cs,*.cshtml}]
# C# specific settings
csharp_new_line_before_open_brace = all
csharp_new_line_before_else = true
csharp_new_line_before_catch = true
csharp_new_line_before_finally = true
csharp_new_line_before_members_in_object_initializers = true
csharp_new_line_before_members_in_anonymous_types = true
csharp_new_line_between_query_expression_clauses = true

# Indentation
csharp_indent_block_contents = true
csharp_indent_switch_labels = true
csharp_indent_labels = one_less_than_current
csharp_indent_switch_case_section = true

# Spacing
csharp_space_after_cast = false
csharp_space_after_colon_in_inheritance_clause = true
csharp_space_after_comma = true
csharp_space_after_dot = false
csharp_space_after_keywords_in_control_flow_statements = true
csharp_space_after_semicolon_in_for_statement = true
csharp_space_before_colon_in_inheritance_clause = true
csharp_space_before_comma = false
csharp_space_before_dot = false
csharp_space_before_for_semicolon = false
csharp_space_before_semicolon_in_for_statement = false
csharp_space_before_foreach_semicolon = false
csharp_space_before_while_semicolon = false
csharp_space_between_empty_square_brackets = false
csharp_space_between_method_call_name_and_opening_parenthesis = false
csharp_space_between_method_call_parameter_and_opening_parenthesis = false
csharp_space_between_method_declaration_parameter_and_opening_parenthesis = false

# Wrapping
csharp_preserve_single_line_blocks = true
csharp_preserve_single_line_statements = true

# Style preferences
csharp_style_var_for_built_in_types = false
csharp_style_var_when_type_is_apparent = true
csharp_style_var_elsewhere = true

csharp_prefer_simple_default_expression = true
csharp_prefer_pattern_matching = true
csharp_style_pattern_matching_over_as_with_null_check = true
csharp_style_inlined_variable_declaration = true
csharp_style_throw_expression = true
csharp_style_conditional_delegate_call = true

csharp_prefer_braces = true
csharp_style_namespace_declarations = file_scoped

# Modifier preferences
csharp_preferred_modifier_order = public,private,protected,internal,static,readonly,async,override,sealed,abstract,virtual,new,extern,volatile,unsafe

# Naming
dotnet_naming_rule.private_static_field.style = lower_camel_case_
dotnet_naming_rule.private_static_field.symbols = private_static_fields
dotnet_naming_symbols.private_static_fields.applicable_accessibilities = private,internal
dotnet_naming_symbols.private_static_fields.required_modifiers = static
dotnet_naming_symbols.private_static_fields.applicable_kinds = field

dotnet_naming_rule.private_field.style = lower_camel_case
dotnet_naming_rule.private_field.symbols = private_fields
dotnet_naming_symbols.private_fields.applicable_accessibilities = private,internal
dotnet_naming_symbols.private_fields.applicable_kinds = field

dotnet_naming_rule.protected_field.style = lower_camel_case
dotnet_naming_rule.protected_field.symbols = protected_fields
dotnet_naming_symbols.protected_fields.applicable_accessibilities = protected
dotnet_naming_symbols.protected_fields.applicable_kinds = field

dotnet_naming_rule.constant_field.style = lower_camel_case
dotnet_naming_rule.constant_field.symbols = constant_fields
dotnet_naming_symbols.constant_fields.applicable_kinds = field
dotnet_naming_symbols.constant_fields.required_modifiers = const,readonly

dotnet_naming_rule.local_constant.style = lower_camel_case
dotnet_naming_rule.local_constant.symbols = local_constants
dotnet_naming_symbols.local_constants.applicable_kinds = local

dotnet_naming_rule.local_variable.style = lower_camel_case
dotnet_naming_rule.local_variable.symbols = local_variables
dotnet_naming_symbols.local_variables.applicable_kinds = local

dotnet_naming_rule.parameter.style = lower_camel_case
dotnet_naming_rule.parameter.symbols = parameters
dotnet_naming_symbols.parameters.applicable_kinds = parameter

dotnet_naming_rule.public_field.style = lower_camel_case
dotnet_naming_rule.public_field.symbols = public_fields
dotnet_naming_symbols.public_fields.applicable_accessibilities = public
dotnet_naming_symbols.public_fields.applicable_kinds = field

dotnet_naming_rule.public_method.style = PascalCase
dotnet_naming_rule.public_method.symbols = public_methods
dotnet_naming_symbols.public_methods.applicable_accessibilities = public
dotnet_naming_symbols.public_methods.applicable_kinds = method

dotnet_naming_rule.private_method.style = PascalCase
dotnet_naming_rule.private_method.symbols = private_methods
dotnet_naming_symbols.private_methods.applicable_accessibilities = private,internal
dotnet_naming_symbols.private_methods.applicable_kinds = method

dotnet_naming_rule.type.style = PascalCase
dotnet_naming_rule.type.symbols = types
dotnet_naming_symbols.types.applicable_kinds = class,struct,enum,interface,delegate

dotnet_naming_rule.interface.style = IPascalCase
dotnet_naming_rule.interface.symbols = interfaces
dotnet_naming_symbols.interfaces.applicable_kinds = interface

dotnet_naming_rule.property.style = PascalCase
dotnet_naming_rule.property.symbols = properties
dotnet_naming_symbols.properties.applicable_kinds = property

dotnet_naming_rule.event.style = PascalCase
dotnet_naming_rule.event.symbols = events
dotnet_naming_symbols.events.applicable_kinds = event

dotnet_naming_rule.namespace.style = PascalCase
dotnet_naming_rule.namespace.symbols = namespaces
dotnet_naming_symbols.namespaces.applicable_kinds = namespace

[*.{xml,xslt,xsl}]
xml_space_indent = 2
