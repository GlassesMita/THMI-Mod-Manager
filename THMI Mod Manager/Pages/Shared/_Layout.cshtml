                'icon-check': '&#xE930',
                'icon-clear': '&#xE711',
                'icon-download': '&#xE896',
                'icon-info': '&#xE946',
                'icon-search': '&#xE721',
                'icon-retry': '&#xE895',
                'icon-reset': '&#xE7A6',
                'icon-clear-storage': '&#xE74D',
                'icon-api-test': '&#xE768',
                'icon-config': '&#xE7C4',
                'icon-view': '&#xE1A6',
                'icon-logs': '&#xE26D',
                'icon-view-logs': '&#xE1A6',
                'icon-download-logs': '&#xE896',
                'icon-clear-logs': '&#xE74D',
                'icon-danger': '&#xE814',
                'icon-history': '&#xE81C',
                'icon-calculator': '&#xE8EF',
                'icon-wifi': '&#xE701',
                'icon-permission': '&#xE1E6',
                'icon-send': '&#xE8A7',
                'icon-reload': '&#xE72C',
                'icon-folder-up': '&#xE8AC',
                'icon-star': '&#xE734',
                'icon-pause': '&#xE769',
                'icon-steam': '&#xE1D6',
                'icon-mods-main': '&#xF133',
                'icon-warning-mods': '&#xE814'
            },
            
            applyIcons() {
                document.querySelectorAll('[data-icon]').forEach(el => {
                    const iconId = el.getAttribute('data-icon');
                    const content = this.iconMappings[iconId];
                    if (content) {
                        el.innerHTML = content;
                        el.className = 'segoe-icon';
                    }
                });
            },
            
            init() {
                if (document.readyState === 'loading') {
                    document.addEventListener('DOMContentLoaded', () => this.applyIcons());
                } else {
                    this.applyIcons();
                }
            }
        };
        
        // 网络状态本地化字符串
        const networkLocalizedStrings = {
            ethernet: '@Html.Raw(AppConfig.GetLocalized("Network:Ethernet", "Ethernet"))',
            internetAccess: '@Html.Raw(AppConfig.GetLocalized("Network:InternetAccess", "Internet access"))',
            noInternet: '@Html.Raw(AppConfig.GetLocalized("Network:NoInternet", "No Internet connection"))',
            internetSettings: '@Html.Raw(AppConfig.GetLocalized("Network:InternetSettings", "Go to Internet settings"))'
        };
        
        // 网络状态模块
        const NetworkStatus = {
            interval: 5000, // 5秒检查一次
            timeout: 3000,
            checkEndpoint: '/api/launcher/network-status',
            currentStatus: null,
            
            // 图标映射
            icons: {
                ethernet: '&#xE839;',
                wifiStrong: '&#xE701;',
                wifiGood: '&#xE874;',
                wifiFair: '&#xE873;',
                wifiWeak: '&#xE872;',
                noInternet: '&#xF384;'
            },
            
            async checkStatus() {
                try {
                    const controller = new AbortController();
                    const timeoutId = setTimeout(() => controller.abort(), this.timeout);
                    
                    const response = await fetch(this.checkEndpoint, {
                        method: 'GET',
                        signal: controller.signal,
                        headers: { 'Content-Type': 'application/json' }
                    });
                    
                    clearTimeout(timeoutId);
                    
                    if (response.ok) {
                        const data = await response.json();
                        this.currentStatus = data;
                        this.updateUI(data);
                    }
                } catch (error) {
                    console.error('网络状态检查失败:', error);
                    this.showOfflineState();
                }
            },
            
            getIconForSignal(signalStrength, isEthernet) {
                if (isEthernet) return this.icons.ethernet;
                if (signalStrength >= 80) return this.icons.wifiStrong;
                if (signalStrength >= 60) return this.icons.wifiGood;
                if (signalStrength >= 40) return this.icons.wifiFair;
                return this.icons.wifiWeak;
            },
            
            updateUI(data) {
                const iconElement = document.getElementById('networkStatusIcon');
                if (!iconElement) return;
                
                const hasInternet = data.hasInternet !== false;
                const isConnected = data.isConnected !== false;
                const isEthernet = data.networkType === 'Ethernet';
                const signalStrength = data.signalStrength || 0;
                const ssid = data.ssid || '';
                
                // 设置图标 - 无连接时显示无 Internet 图标
                const iconHtml = isConnected 
                    ? (hasInternet ? this.getIconForSignal(signalStrength, isEthernet) : this.icons.noInternet)
                    : this.icons.noInternet;
                
                iconElement.innerHTML = iconHtml;
                iconElement.className = 'segoe-icon network-icon';
                
                // 设置Tooltip数据
                const tooltipText = this.formatTooltipText(data);
                iconElement.setAttribute('data-tooltip-text', tooltipText);
                iconElement.setAttribute('data-tooltip-network', 'true');
            },
            
            formatTooltipText(data) {
                const hasInternet = data.hasInternet !== false;
                const isEthernet = data.networkType === 'Ethernet';
                const ssid = data.ssid || '';
                const isConnected = data.isConnected !== false;
                
                let text = '';
                
                // 以太网或 WiFi 显示名称（无中括号）
                if (isEthernet) {
                    text += networkLocalizedStrings.ethernet;
                } else if (ssid) {
                    text += ssid;
                }
                
                // Internet 连接状态
                if (hasInternet && isConnected) {
                    text += '\n' + networkLocalizedStrings.internetAccess;
                } else {
                    text += '\n' + networkLocalizedStrings.noInternet;
                }
                
                return text;
            },
            
            showOfflineState() {
                const iconElement = document.getElementById('networkStatusIcon');
                if (!iconElement) return;
                
                iconElement.innerHTML = this.icons.noInternet;
                iconElement.className = 'segoe-icon network-icon';
                iconElement.setAttribute('data-tooltip-text', '\n' + networkLocalizedStrings.noInternet);
                iconElement.setAttribute('data-tooltip-network', 'true');
            },
            
            startPolling() {
                this.checkStatus();
                setInterval(() => this.checkStatus(), this.interval);
            },
            
            init() {
                if (document.readyState === 'loading') {
                    document.addEventListener('DOMContentLoaded', () => this.startPolling());
                } else {
                    this.startPolling();
                }
            }
        };
        
        // 自定义 Tooltip 模块
        const CustomTooltip = {
            tooltipElement: null,
            contentElement: null,
            hideTimeout: null,
            showDelay: 300,
            hideDelay: 200,
            networkContextMenu: null,
            
            init() {
                this.tooltipElement = document.getElementById('customTooltip');
                this.contentElement = this.tooltipElement?.querySelector('.tooltip-content');
                
                if (!this.tooltipElement || !this.contentElement) {
                    console.warn('Tooltip elements not found');
                    return;
                }
                
                // 绑定事件到所有带有 data-tooltip 属性的元素
                document.addEventListener('mouseenter', (e) => {
                    const target = e.target.closest('[data-tooltip], [data-tooltip-network]');
                    if (target) {
                        this.show(target, e);
                    }
                }, true);
                
                document.addEventListener('mouseleave', (e) => {
                    const target = e.target.closest('[data-tooltip], [data-tooltip-network]');
                    if (target) {
                        this.hide();
                    }
                }, true);
                
                document.addEventListener('mousemove', (e) => {
                    if (this.tooltipElement.style.display !== 'none') {
                        this.updatePosition(e);
                    }
                });
                
                // 为网络图标添加右键菜单（使用现有的全局 contextMenu 实例）
                this.initNetworkContextMenu();
            },
            
            initNetworkContextMenu() {
                document.addEventListener('contextmenu', (e) => {
                    const target = e.target.closest('[data-tooltip-network]');
                    if (target && e.target) {
                        e.preventDefault();
                        
                        // 使用全局 contextMenu 实例设置网络菜单项
                        if (window.contextMenu) {
                            window.contextMenu.setMenuItems([
                                {
                                    icon: 'icon-wifi',
                                    iconContent: '&#xEC27;',
                                    label: networkLocalizedStrings.internetSettings,
                                    action: 'internetSettings',
                                    type: 'action'
                                }
                            ]);
                            window.contextMenu.show(e.clientX, e.clientY);
                        }
                    }
                }, true);
            },
            
            show(element, event) {
                clearTimeout(this.hideTimeout);
                
                const showDelay = element.getAttribute('data-tooltip-delay') || this.showDelay;
                
                this.hideTimeout = setTimeout(() => {
                    let content = '';
                    
                    // 网络状态 Tooltip
                    if (element.getAttribute('data-tooltip-network') === 'true') {
                        const tooltipText = element.getAttribute('data-tooltip-text');
                        if (tooltipText) {
                            const lines = tooltipText.split('\n');
                            content = `<div class="tooltip-title">${lines[0] || ''}</div>`;
                            if (lines.length > 1) {
                                content += `<div class="tooltip-divider"></div>`;
                                content += `<div class="tooltip-subtitle">${lines.slice(1).join('<br>')}</div>`;
                            }
                        }
                    } else {
                        // 默认 Tooltip
                        const title = element.getAttribute('data-tooltip-title');
                        const text = element.getAttribute('data-tooltip-text');
                        
                        if (title) {
                            content += `<div class="tooltip-title">${title}</div>`;
                        }
                        if (text) {
                            if (title) {
                                content += `<div class="tooltip-divider"></div>`;
                            }
                            content += `<div class="tooltip-subtitle">${text}</div>`;
                        }
                    }
                    
                    if (content) {
                        this.contentElement.innerHTML = content;
                        this.tooltipElement.style.display = 'block';
                        
                        // 触发淡入动画
                        requestAnimationFrame(() => {
                            this.tooltipElement.classList.add('show');
                        });
                        
                        this.updatePosition(event);
                    }
                }, parseInt(showDelay));
            },
            
            hide() {
                clearTimeout(this.hideTimeout);
                
                this.hideTimeout = setTimeout(() => {
                    this.tooltipElement.classList.remove('show');
                    
                    // 等待淡出动画完成后隐藏
                    setTimeout(() => {
                        if (!this.tooltipElement.classList.contains('show')) {
                            this.tooltipElement.style.display = 'none';
                        }
                    }, 200);
                }, this.hideDelay);
            },
            
            updatePosition(event) {
                const tooltip = this.tooltipElement;
                const padding = 12;
                
                let x = event.clientX + padding;
                let y = event.clientY + padding;
                
                const tooltipRect = tooltip.getBoundingClientRect();
                const viewportWidth = window.innerWidth;
                const viewportHeight = window.innerHeight;
                
                // 防止超出视口
                if (x + tooltipRect.width > viewportWidth - padding) {
                    x = event.clientX - tooltipRect.width - padding;
                }
                if (y + tooltipRect.height > viewportHeight - padding) {
                    y = event.clientY - tooltipRect.height - padding;
                }
                
                tooltip.style.left = x + 'px';
                tooltip.style.top = y + 'px';
            }
        };
        
        IconSystem.init();
        NetworkStatus.init();
        CustomTooltip.init();
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
