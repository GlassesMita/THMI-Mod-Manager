    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/oojs/oojs.min.js" asp-append-version="true"></script>
    <script src="~/oojs-ui/oojs-ui.min.js" asp-append-version="true"></script>
    <script src="~/oojs-ui/oojs-ui-wikimediaui.min.js" asp-append-version="true"></script>
