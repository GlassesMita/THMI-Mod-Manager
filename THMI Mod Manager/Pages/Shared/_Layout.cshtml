    <!-- 后端存活检测脚本 -->
    <script>
        // 后端存活检测配置（使用独立命名空间避免冲突）
        const backendHealthCheck = {
            interval: 5000, // 每5秒检测一次
            timeout: 3000,  // 请求超时时间3秒
            retryAttempts: 3, // 重试次数
            currentRetries: 0,
            isHealthy: true,
            checkEndpoint: '/api/launcher/status' // 使用已存在的状态检测端点
        };

        // 显示后端离线提示
        function showBackendOfflineModal() {
            // 获取本地化文本
            const title = '@Html.Raw(AppConfig.GetLocalized("Buttons:BackendConnectionLost", "Connection Lost"))';
            const offlineTitle = '@Html.Raw(AppConfig.GetLocalized("Buttons:BackendOfflineTitle", "Backend Server Connection Failed!"))';
            const offlineDesc = '@Html.Raw(AppConfig.GetLocalized("Buttons:BackendOfflineDesc", "Unable to connect to THMI Mod Manager backend service. This may be due to:"))';
            const reasons = '@Html.Raw(AppConfig.GetLocalized("Buttons:BackendOfflineReasons", "Server is down or crashed|Network connection issues|Application is restarting"))'.split('|');
            const suggestion = '@Html.Raw(AppConfig.GetLocalized("Buttons:BackendOfflineSuggestion", "Some features may not work properly. Please try refreshing the page or restarting the application."))';
            const refreshText = '@Html.Raw(AppConfig.GetLocalized("Buttons:BackendOfflineRefresh", "Refresh Page"))';
            const retryText = '@Html.Raw(AppConfig.GetLocalized("Buttons:BackendOfflineRetry", "Retry Connection"))';

            // 创建模态框HTML
            const modalHtml = `
                <div class="modal fade" id="backendOfflineModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="backendOfflineModalLabel" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered">
                        <div class="modal-content">
                            <div class="modal-header bg-danger text-white">
                                <h5 class="modal-title" id="backendOfflineModalLabel">
                                    <i class="bi bi-exclamation-triangle-fill"></i> ${title}
                                </h5>
                            </div>
                            <div class="modal-body">
                                <p><strong>${offlineTitle}</strong></p>
                                <p>${offlineDesc}</p>
                                <ul>
                                    ${reasons.map(reason => `<li>${reason}</li>`).join('')}
                                </ul>
                                <p>${suggestion}</p>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-primary" onclick="location.reload()">
                                    <i class="bi bi-arrow-clockwise"></i> ${refreshText}
                                </button>
                                <button type="button" class="btn btn-secondary" onclick="backendHealthCheck.checkNow()">
                                    <i class="bi bi-arrow-repeat"></i> ${retryText}
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            `;

            // 如果模态框已存在，先移除
            const existingModal = document.getElementById('backendOfflineModal');
            if (existingModal) {
                const modalInstance = bootstrap.Modal.getInstance(existingModal);
                if (modalInstance) {
                    modalInstance.hide();
                }
                existingModal.remove();
            }

            // 添加模态框到页面
            document.body.insertAdjacentHTML('beforeend', modalHtml);
            
            // 显示模态框
            const modal = new bootstrap.Modal(document.getElementById('backendOfflineModal'));
            modal.show();
        }

        // 隐藏后端离线提示
        function hideBackendOfflineModal() {
            const modal = document.getElementById('backendOfflineModal');
            if (modal) {
                const modalInstance = bootstrap.Modal.getInstance(modal);
                if (modalInstance) {
                    modalInstance.hide();
                }
            }
        }

        // 检查后端状态
        async function checkBackendHealth() {
            try {
                const controller = new AbortController();
                const timeoutId = setTimeout(() => controller.abort(), backendHealthCheck.timeout);

                const response = await fetch(backendHealthCheck.checkEndpoint, {
                    method: 'GET',
                    signal: controller.signal,
                    headers: {
                        'Content-Type': 'application/json',
                    }
                });

                clearTimeout(timeoutId);

                if (response.ok) {
                    // 后端响应正常
                    if (!backendHealthCheck.isHealthy) {
                        // 从离线状态恢复
                        console.log('后端连接已恢复');
                        hideBackendOfflineModal();
                        backendHealthCheck.isHealthy = true;
                        backendHealthCheck.currentRetries = 0;
                    }
                } else {
                    // 后端返回错误状态码
                    throw new Error(`HTTP ${response.status}`);
                }
            } catch (error) {
                console.error('后端健康检查失败:', error);
                backendHealthCheck.currentRetries++;

                if (backendHealthCheck.currentRetries >= backendHealthCheck.retryAttempts) {
                    // 达到重试上限，认为后端离线
                    if (backendHealthCheck.isHealthy) {
                        backendHealthCheck.isHealthy = false;
                        showBackendOfflineModal();
                    }
                }
            }
        }

        // 立即检查后端状态
        backendHealthCheck.checkNow = function() {
            backendHealthCheck.currentRetries = 0;
            hideBackendOfflineModal();
            checkBackendHealth();
        };

        // 启动定期检测
        function startHealthCheck() {
            // 立即执行一次检测
            checkBackendHealth();
            
            // 设置定期检测
            setInterval(checkBackendHealth, backendHealthCheck.interval);
        }

        // 页面加载完成后启动检测
        document.addEventListener('DOMContentLoaded', function() {
            startHealthCheck();
        });

        // 页面可见性变化时重新检测（用户切换回页面时）
        document.addEventListener('visibilitychange', function() {
            if (!document.hidden && !backendHealthCheck.isHealthy) {
                backendHealthCheck.checkNow();
            }
        });
    </script>

    <!-- Steam 状态检查脚本 -->
    <script>
        const steamStatusCheck = {
            interval: 5000,
            timeout: 3000,
            checkEndpoint: '/api/launcher/steam-status',
            runningText: '@Html.Raw(AppConfig.GetLocalized("Steam:Running", "Running"))',
            notRunningText: '@Html.Raw(AppConfig.GetLocalized("Steam:NotRunning", "Not Running"))',
            checkingText: '@Html.Raw(AppConfig.GetLocalized("Steam:Checking", "Checking..."))'
        };

        async function checkSteamStatus() {
            try {
                const controller = new AbortController();
                const timeoutId = setTimeout(() => controller.abort(), steamStatusCheck.timeout);

                const response = await fetch(steamStatusCheck.checkEndpoint, {
                    method: 'GET',
                    signal: controller.signal,
                    headers: {
                        'Content-Type': 'application/json',
                    }
                });

                clearTimeout(timeoutId);

                if (response.ok) {
                    const data = await response.json();
                    updateSteamStatusUI(data.isRunning);
                } else {
                    throw new Error(`HTTP ${response.status}`);
                }
            } catch (error) {
                console.error('Steam 状态检查失败:', error);
                updateSteamStatusUI(false);
            }
        }

        function updateSteamStatusUI(isRunning) {
            const icon = document.getElementById('steamStatusIcon');
            const text = document.getElementById('steamStatusText');
            const iconOffcanvas = document.getElementById('steamStatusIconOffcanvas');
            const textOffcanvas = document.getElementById('steamStatusTextOffcanvas');

            const iconClass = isRunning ? 'bi-steam text-success' : 'bi-steam text-muted';
            const statusText = isRunning ? steamStatusCheck.runningText : steamStatusCheck.notRunningText;

            if (icon) {
                icon.className = `bi ${iconClass} me-2`;
            }
            if (text) {
                text.textContent = statusText;
            }
            if (iconOffcanvas) {
                iconOffcanvas.className = `bi ${iconClass} me-2`;
            }
            if (textOffcanvas) {
                textOffcanvas.textContent = statusText;
            }
        }

        function startSteamStatusCheck() {
            checkSteamStatus();
            setInterval(checkSteamStatus, steamStatusCheck.interval);
        }

        document.addEventListener('DOMContentLoaded', function() {
            startSteamStatusCheck();
        });

        document.addEventListener('visibilitychange', function() {
            if (!document.hidden) {
                checkSteamStatus();
            }
        });

        const steamStatusClickHandler = {
            sidebarClickCount: 0,
            offcanvasClickCount: 0,
            sidebarRequiredClicks: Math.floor(Math.random() * 6) + 5,
            offcanvasRequiredClicks: Math.floor(Math.random() * 6) + 5,
            storageKey: 'steamStatusClickState'
        };

        function loadClickState() {
            try {
                const savedState = localStorage.getItem(steamStatusClickHandler.storageKey);
                if (savedState) {
                    const state = JSON.parse(savedState);
                    steamStatusClickHandler.sidebarClickCount = state.sidebarClickCount || 0;
                    steamStatusClickHandler.offcanvasClickCount = state.offcanvasClickCount || 0;
                    steamStatusClickHandler.sidebarRequiredClicks = state.sidebarRequiredClicks || Math.floor(Math.random() * 6) + 5;
                    steamStatusClickHandler.offcanvasRequiredClicks = state.offcanvasRequiredClicks || Math.floor(Math.random() * 6) + 5;
                }
            } catch (e) {
                console.error('Failed to load click state:', e);
            }
        }

        function saveClickState() {
            try {
                const state = {
                    sidebarClickCount: steamStatusClickHandler.sidebarClickCount,
                    offcanvasClickCount: steamStatusClickHandler.offcanvasClickCount,
                    sidebarRequiredClicks: steamStatusClickHandler.sidebarRequiredClicks,
                    offcanvasRequiredClicks: steamStatusClickHandler.offcanvasRequiredClicks
                };
                localStorage.setItem(steamStatusClickHandler.storageKey, JSON.stringify(state));
            } catch (e) {
                console.error('Failed to save click state:', e);
            }
        }

        function handleSteamStatusClick(event, type) {
            if (type === 'sidebar') {
                steamStatusClickHandler.sidebarClickCount++;
                
                if (steamStatusClickHandler.sidebarClickCount >= steamStatusClickHandler.sidebarRequiredClicks) {
                    window.location.href = '/CatastrophicInfrastructureFailure';
                    steamStatusClickHandler.sidebarClickCount = 0;
                    steamStatusClickHandler.sidebarRequiredClicks = Math.floor(Math.random() * 6) + 5;
                    saveClickState();
                } else {
                    saveClickState();
                }
            } else if (type === 'offcanvas') {
                steamStatusClickHandler.offcanvasClickCount++;
                
                if (steamStatusClickHandler.offcanvasClickCount >= steamStatusClickHandler.offcanvasRequiredClicks) {
                    window.location.href = '/CatastrophicInfrastructureFailure';
                    steamStatusClickHandler.offcanvasClickCount = 0;
                    steamStatusClickHandler.offcanvasRequiredClicks = Math.floor(Math.random() * 6) + 5;
                    saveClickState();
                } else {
                    saveClickState();
                }
            }
        }

        document.addEventListener('DOMContentLoaded', function() {
            loadClickState();
            
            const steamStatusIndicator = document.getElementById('steamStatusIndicator');
            const steamStatusIndicatorOffcanvas = document.getElementById('steamStatusIndicatorOffcanvas');
            
            if (steamStatusIndicator) {
                steamStatusIndicator.addEventListener('click', function(event) {
                    handleSteamStatusClick(event, 'sidebar');
                });
            }
            
            if (steamStatusIndicatorOffcanvas) {
                steamStatusIndicatorOffcanvas.addEventListener('click', function(event) {
                    handleSteamStatusClick(event, 'offcanvas');
                });
            }
        });
    </script>

    <!-- 通知轮询脚本 -->
    <script>
        const notificationPoll = {
            interval: 3000,
            endpoint: '/api/notification/poll',
            closeText: '@Html.Raw(AppConfig.GetLocalized("Notifications:Close", "Close"))'
        };

        async function checkNotifications() {
            try {
                const response = await fetch(notificationPoll.endpoint);
                if (response.ok) {
                    const data = await response.json();
                    if (data.success && data.data && data.data.length > 0) {
                        data.data.forEach(showNotification);
                    }
                }
            } catch (error) {
                console.error('通知检查失败:', error);
            }
        }

        function showNotification(notification) {
            const toastId = 'notificationToast-' + notification.id;
            const existingToast = document.getElementById(toastId);
            if (existingToast) {
                existingToast.remove();
            }

            const iconClass = notification.type === 'warning' ? 'bi-exclamation-triangle-fill text-warning' :
                             notification.type === 'error' ? 'bi-x-circle-fill text-danger' :
                             'bi-bell-fill text-primary';

            const toastHtml = `
                <div id="${toastId}" class="toast" role="alert" aria-live="assertive" aria-atomic="true">
                    <div class="toast-header">
                        <i class="bi ${iconClass} me-2"></i>
                        <strong class="me-auto">${notification.title}</strong>
                        <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="${notificationPoll.closeText}"></button>
                    </div>
                    <div class="toast-body">
                        ${notification.message.replace(/\n/g, '<br>')}
                    </div>
                </div>
            `;

            const container = document.querySelector('.toast-container');
            if (container) {
                container.insertAdjacentHTML('beforeend', toastHtml);
                const toastElement = document.getElementById(toastId);
                const toast = new bootstrap.Toast(toastElement, { autohide: true, delay: 8000 });
                toast.show();
            }
        }

        function startNotificationPoll() {
            checkNotifications();
            setInterval(checkNotifications, notificationPoll.interval);
        }

        document.addEventListener('DOMContentLoaded', function() {
            startNotificationPoll();
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
