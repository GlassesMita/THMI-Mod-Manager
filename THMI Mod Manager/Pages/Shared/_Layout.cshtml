                try {
                    const response = await fetch('/api/launcher/session-time');
                    if (response.ok) {
                        const data = await response.json();
                        const previousState = this.currentState.isRunning;
                        this.currentState = data;
                        
                        // 如果游戏刚开始运行，记录开始时间
                        if (data.isRunning && !previousState) {
                            this.startTime = Date.now();
                            this.accumulatedSeconds = data.totalSeconds || 0;
