@inject THMI_Mod_Manager.Services.AppConfigManager AppConfig

@{ string year = DateTime.Now.Year.ToString(); }

@using THMI_Mod_Manager.Services
@inject AppConfigManager AppConfig
@{
    var themeColor = AppConfig.Get("[App]ThemeColor", "#c670ff");
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - THMI Mod Manager</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/cursor-selector.css" asp-append-version="true" />
    <style>
        h1 {
            color: @themeColor !important;
        }
    </style>
    @await RenderSectionAsync("Styles", required: false)
    <style>
        /* Ensure main content doesn't sit under fixed sidebar on md+ */
        @@media (min-width: 768px) {
            #mainContent { margin-left: 260px; }
        }
        /* Remove padding-top from body since sidebar is now fixed */
        body {
            padding-top: 0 !important;
        }
        /* Custom cursor styles */
        .custom-cursor {
            cursor: url('@Url.Content("~/Resources/Cursor.cur")'), auto !important;
        }
        .custom-cursor * {
            cursor: url('@Url.Content("~/Resources/Cursor.cur")'), auto !important;
        }
        
        /* 全局轻度动画效果 */
        /* 页面淡入效果 */
        @@keyframes fadeIn {
            from { opacity: 0; transform: translateY(10px); }
            to { opacity: 1; transform: translateY(0); }
        }
        
        /* 标题下滑效果 */
        @@keyframes slideInDown {
            from { opacity: 0; transform: translateY(-20px); }
            to { opacity: 1; transform: translateY(0); }
        }
        
        /* 按钮悬停脉冲效果 */
        @@keyframes pulse {
            0% { transform: scale(1); }
            50% { transform: scale(1.02); }
            100% { transform: scale(1); }
        }
        
        /* 渐入上移效果 */
        @@keyframes fadeInUp {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }
        
        /* 应用动画到页面元素 */
        #mainContent {
            animation: fadeIn 0.5s ease-out;
        }
        
        h1, h2, h3, h4, h5, h6 {
            animation: slideInDown 0.5s ease-out;
        }
        
        .btn {
            transition: all 0.2s ease-in-out;
        }
        
        .btn:hover {
            animation: pulse 0.3s ease-in-out;
        }
        
        .form-control, .form-select, .form-check-input {
            animation: fadeInUp 0.3s ease-out;
        }
        
        /* 卡片悬停效果 */
        .card {
            transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
        }
        
        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }
        
        /* 导航链接悬停效果 */
        .nav-link {
            transition: all 0.2s ease-in-out;
        }
        
        .nav-link:hover {
            transform: translateX(5px);
        }
    </style>
</head>
<body>
    <!-- Top navbar for small screens: shows brand and toggle for offcanvas sidebar -->
    <nav class="navbar navbar-light bg-white border-bottom d-md-none">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-page="/Index">@AppConfig.GetLocalized("App:Name", "THMI Mod Manager")</a>
            <button class="btn btn-outline-secondary" type="button" data-bs-toggle="offcanvas" data-bs-target="#sidebarOffcanvas" aria-controls="sidebarOffcanvas">
                <i class="bi bi-list"></i>
            </button>
        </div>
    </nav>

    <div class="d-flex">
        <!-- Sidebar for md and up -->
        <nav id="sidebar" class="bg-white border-end d-none d-md-block" style="width:260px; height:100vh; position:fixed; top:0; left:0; overflow:hidden;">
            <div class="p-3">
                <a class="navbar-brand d-block mb-3" asp-area="" asp-page="/Index">@AppConfig.GetLocalized("App:Name", "THMI Mod Manager")</a>
                <ul class="nav nav-pills flex-column">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="/Index"><i class="bi bi-house"></i> <span class="ms-2">@AppConfig.GetLocalized("Sidebar:Home", "Home")</span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="/Mods"><i class="bi bi-box-seam"></i> <span class="ms-2">@AppConfig.GetLocalized("Sidebar:Mods", "Mods")</span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="/Settings"><i class="bi bi-gear"></i> <span class="ms-2">@AppConfig.GetLocalized("Sidebar:Settings", "Settings")</span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="/About"><i class="bi bi-info-circle"></i> <span class="ms-2">@AppConfig.GetLocalized("Sidebar:About", "About")</span></a>
                    </li>
                </ul>

                <!-- Fixed button at the bottom of the sidebar (md+) -->
                <div class="position-absolute bottom-0 w-100 p-3">
                    @await Component.InvokeAsync("LaunchButton")
                </div>
            </div>
        </nav>

        <!-- Offcanvas sidebar for small screens -->
        <div class="offcanvas offcanvas-start" tabindex="-1" id="sidebarOffcanvas" aria-labelledby="sidebarOffcanvasLabel" style="overflow:hidden;">
            <div class="offcanvas-header">
                <h5 class="offcanvas-title" id="sidebarOffcanvasLabel">@AppConfig.GetLocalized("App:Name", "THMI Mod Manager")</h5>
                <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
            </div>
            <div class="offcanvas-body" style="display:flex; flex-direction:column; overflow:hidden;">
                <ul class="nav nav-pills flex-column">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="/Index"><i class="bi bi-house"></i> <span class="ms-2">@AppConfig.GetLocalized("Sidebar:Home", "Home")</span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="/Mods"><i class="bi bi-box-seam"></i> <span class="ms-2">@AppConfig.GetLocalized("Sidebar:Mods", "Mods")</span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="/Settings"><i class="bi bi-gear"></i> <span class="ms-2">@AppConfig.GetLocalized("Sidebar:Settings", "Settings")</span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="/About"><i class="bi bi-info-circle"></i> <span class="ms-2">@AppConfig.GetLocalized("Sidebar:About", "About")</span></a>
                    </li>
                </ul>

                <!-- Button stuck to bottom inside offcanvas for small screens -->
                <div class="mt-auto pt-3" style="padding-left:16px; padding-right:16px;">
                    @await Component.InvokeAsync("LaunchButton")
                </div>
            </div>
        </div>

        <!-- Main content -->
        <div id="mainContent" class="flex-grow-1" style="position:relative; min-height:100vh;">
            <div class="container py-3" style="padding-bottom:80px;">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>

            <footer class="border-top footer text-muted" style="position:absolute; bottom:0; width:100%; height:60px; line-height:60px;">
                <div class="container">
                    &copy; @year - THMI Mod Manager - <a asp-area="" asp-page="/Privacy">@AppConfig.GetLocalized("Sidebar:Privacy", "Privacy")</a>
                </div>
            </footer>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    @* 指针选择器功能 *@
    @{
        var configManager = Context.RequestServices.GetService(typeof(THMI_Mod_Manager.Services.AppConfigManager)) as THMI_Mod_Manager.Services.AppConfigManager;
        var cursorType = configManager?.Get("[Cursor]CursorType", "default");
    }
    
    @* 添加animejs CDN引用，用于osu光标动画 *@
    <script src="https://cdnjs.cloudflare.com/ajax/libs/animejs/3.2.1/anime.min.js"></script>
    <script src="~/js/cursor-selector.js" asp-append-version="true"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            if (typeof CursorSelector !== 'undefined') {
                const cursorSelector = CursorSelector.init();
                
                // 如果是 osu 游标类型，初始化 osuCursor
                if ('@{Html.Raw(cursorType);}' === 'osu') {
                    // 动态加载 osu 游标（非模块方式）
                    // 使用 setTimeout 确保在下一个事件循环中执行
                    setTimeout(() => {
                        cursorSelector.loadOsuCursor();
                    }, 0);
                }
            }
        });
    </script>

    <!-- 后端存活检测脚本 -->
    <script>
        // 后端存活检测配置（使用独立命名空间避免冲突）
        const backendHealthCheck = {
            interval: 5000, // 每5秒检测一次
            timeout: 3000,  // 请求超时时间3秒
            retryAttempts: 3, // 重试次数
            currentRetries: 0,
            isHealthy: true,
            checkEndpoint: '/api/launcher/status' // 使用已存在的状态检测端点
        };

        // 显示后端离线提示
        function showBackendOfflineModal() {
            // 获取本地化文本
            const title = '@Html.Raw(AppConfig.GetLocalized("Buttons:BackendConnectionLost", "Connection Lost"))';
            const offlineTitle = '@Html.Raw(AppConfig.GetLocalized("Buttons:BackendOfflineTitle", "Backend Server Connection Failed!"))';
            const offlineDesc = '@Html.Raw(AppConfig.GetLocalized("Buttons:BackendOfflineDesc", "Unable to connect to THMI Mod Manager backend service. This may be due to:"))';
            const reasons = '@Html.Raw(AppConfig.GetLocalized("Buttons:BackendOfflineReasons", "Server is down or crashed|Network connection issues|Application is restarting"))'.split('|');
            const suggestion = '@Html.Raw(AppConfig.GetLocalized("Buttons:BackendOfflineSuggestion", "Some features may not work properly. Please try refreshing the page or restarting the application."))';
            const refreshText = '@Html.Raw(AppConfig.GetLocalized("Buttons:BackendOfflineRefresh", "Refresh Page"))';
            const retryText = '@Html.Raw(AppConfig.GetLocalized("Buttons:BackendOfflineRetry", "Retry Connection"))';

            // 创建模态框HTML
            const modalHtml = `
                <div class="modal fade" id="backendOfflineModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="backendOfflineModalLabel" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered">
                        <div class="modal-content">
                            <div class="modal-header bg-danger text-white">
                                <h5 class="modal-title" id="backendOfflineModalLabel">
                                    <i class="bi bi-exclamation-triangle-fill"></i> ${title}
                                </h5>
                            </div>
                            <div class="modal-body">
                                <p><strong>${offlineTitle}</strong></p>
                                <p>${offlineDesc}</p>
                                <ul>
                                    ${reasons.map(reason => `<li>${reason}</li>`).join('')}
                                </ul>
                                <p>${suggestion}</p>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-primary" onclick="location.reload()">
                                    <i class="bi bi-arrow-clockwise"></i> ${refreshText}
                                </button>
                                <button type="button" class="btn btn-secondary" onclick="backendHealthCheck.checkNow()">
                                    <i class="bi bi-arrow-repeat"></i> ${retryText}
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            `;

            // 如果模态框已存在，先移除
            const existingModal = document.getElementById('backendOfflineModal');
            if (existingModal) {
                const modalInstance = bootstrap.Modal.getInstance(existingModal);
                if (modalInstance) {
                    modalInstance.hide();
                }
                existingModal.remove();
            }

            // 添加模态框到页面
            document.body.insertAdjacentHTML('beforeend', modalHtml);
            
            // 显示模态框
            const modal = new bootstrap.Modal(document.getElementById('backendOfflineModal'));
            modal.show();
        }

        // 隐藏后端离线提示
        function hideBackendOfflineModal() {
            const modal = document.getElementById('backendOfflineModal');
            if (modal) {
                const modalInstance = bootstrap.Modal.getInstance(modal);
                if (modalInstance) {
                    modalInstance.hide();
                }
            }
        }

        // 检查后端状态
        async function checkBackendHealth() {
            try {
                const controller = new AbortController();
                const timeoutId = setTimeout(() => controller.abort(), backendHealthCheck.timeout);

                const response = await fetch(backendHealthCheck.checkEndpoint, {
                    method: 'GET',
                    signal: controller.signal,
                    headers: {
                        'Content-Type': 'application/json',
                    }
                });

                clearTimeout(timeoutId);

                if (response.ok) {
                    // 后端响应正常
                    if (!backendHealthCheck.isHealthy) {
                        // 从离线状态恢复
                        console.log('后端连接已恢复');
                        hideBackendOfflineModal();
                        backendHealthCheck.isHealthy = true;
                        backendHealthCheck.currentRetries = 0;
                    }
                } else {
                    // 后端返回错误状态码
                    throw new Error(`HTTP ${response.status}`);
                }
            } catch (error) {
                console.error('后端健康检查失败:', error);
                backendHealthCheck.currentRetries++;

                if (backendHealthCheck.currentRetries >= backendHealthCheck.retryAttempts) {
                    // 达到重试上限，认为后端离线
                    if (backendHealthCheck.isHealthy) {
                        backendHealthCheck.isHealthy = false;
                        showBackendOfflineModal();
                    }
                }
            }
        }

        // 立即检查后端状态
        backendHealthCheck.checkNow = function() {
            backendHealthCheck.currentRetries = 0;
            hideBackendOfflineModal();
            checkBackendHealth();
        };

        // 启动定期检测
        function startHealthCheck() {
            // 立即执行一次检测
            checkBackendHealth();
            
            // 设置定期检测
            setInterval(checkBackendHealth, backendHealthCheck.interval);
        }

        // 页面加载完成后启动检测
        document.addEventListener('DOMContentLoaded', function() {
            startHealthCheck();
        });

        // 页面可见性变化时重新检测（用户切换回页面时）
        document.addEventListener('visibilitychange', function() {
            if (!document.hidden && !backendHealthCheck.isHealthy) {
                backendHealthCheck.checkNow();
            }
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>