    <script src="~/js/context-menu.js" asp-append-version="true"></script>
    <script src="~/js/settings.js" asp-append-version="true"></script>
    
    @* 指针选择器功能 *@
    @{
        var configManager = Context.RequestServices.GetService(typeof(THMI_Mod_Manager.Services.AppConfigManager)) as THMI_Mod_Manager.Services.AppConfigManager;
        var cursorType = configManager?.Get("[Cursor]CursorType", "default");
    }
    <script>
        window.localizedStrings = {
            loading: '@Html.Raw(AppConfig.GetLocalized("Common:Loading", "Loading..."))',
            selectFile: '@Html.Raw(AppConfig.GetLocalized("FileBrowser:SelectFile", "Select File"))',
            selectExecutable: '@Html.Raw(AppConfig.GetLocalized("FileBrowser:SelectExecutable", "Select Executable File"))',
            selectModsFolder: '@Html.Raw(AppConfig.GetLocalized("FileBrowser:SelectModsFolder", "Select Mods Folder"))',
