    <script>
        document.addEventListener('DOMContentLoaded', function() {
            if (typeof CursorSelector !== 'undefined') {
                const cursorSelector = CursorSelector.init();
                
                // 根据配置应用不同的指针类型
                const cursorType = '@Html.Raw(cursorType)';
                
                // 使用 CursorSelector 实例的 setCursor 方法来应用光标类型
                // 这样可以确保 currentCursor 属性与实际应用的光标类型一致
                cursorSelector.setCursor(cursorType);
            }
        });
