                        <span>@AppConfig.GetLocalized("Common:Exit", "Exit")</span>
                    </button>
                    <span id="topTimeDisplay" class="top-time-text"></span>
                </div>
            </div>
            
            <!-- Update notification banner -->
            <div id="updateNotificationBanner" class="alert alert-info alert-dismissible fade show" style="display: none; border-radius: 0; margin: 0; position: sticky; top: 0; z-index: 1050;">
                <div class="container d-flex align-items-center justify-content-between">
                    <div class="d-flex align-items-center">
                        <i class="bi bi-bell-fill me-2"></i>
