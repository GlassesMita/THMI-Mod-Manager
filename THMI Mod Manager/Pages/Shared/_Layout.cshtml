            use12Hour: localStorage.getItem('datetimeUse12Hour') === 'true' ? true : (serverDateTimeSettings.use12Hour),
            dateFormat: localStorage.getItem('datetimeDateFormat') || serverDateTimeSettings.dateFormat,
            dateSeparator: localStorage.getItem('datetimeDateSeparator') || serverDateTimeSettings.dateSeparator
        };
        
        window.dateTimeSettings = dateTimeSettings;
        
        function formatTime(date, options) {
            const showSeconds = dateTimeSettings.showSeconds;
            const use12Hour = dateTimeSettings.use12Hour;
            
            const timeOptions = {
                hour: 'numeric',
                minute: '2-digit',
                hour12: use12Hour
            };
            
            if (showSeconds) {
                timeOptions.second = '2-digit';
            }
            
            return date.toLocaleTimeString('en-US', timeOptions);
        }
        
        function formatDate(date, format, separator) {
            const year = date.getFullYear();
            const month = String(date.getMonth() + 1).padStart(2, '0');
            const day = String(date.getDate()).padStart(2, '0');
            const displayMonth = date.toLocaleDateString(navigator.language || 'en-US', { month: 'short' });
            const displayDay = date.getDate();
            
            switch (format) {
                case 'dd-mm-yyyy':
                    return `${day}${separator}${month}${separator}${year}`;
                case 'mm-dd-yyyy':
                    return `${month}${separator}${day}${separator}${year}`;
                case 'yyyy/mm/dd':
                    return `${year}${separator}${month}${separator}${day}`;
                case 'month-dd':
                    return `${displayMonth} ${displayDay}`;
                case 'dd-month':
                    return `${displayDay} ${displayMonth}`;
                default: // yyyy-mm-dd
                    return `${year}${separator}${month}${separator}${day}`;
            }
        }
        
