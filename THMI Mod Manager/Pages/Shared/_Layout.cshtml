                    <li class="oojs-ui-menu-item">
                        <a class="nav-link text-dark oojs-ui-menu-link" asp-area="" asp-page="/Explore"><span class="oojs-ui-menu-icon"><i class="bi bi-globe"></i></span><span class="oojs-ui-menu-text">@AppConfig.GetLocalized("Sidebar:Explore", "Explore")</span></a>
