@inject THMI_Mod_Manager.Services.AppConfigManager AppConfig

@{ string year = DateTime.Now.Year.ToString(); }

@using THMI_Mod_Manager.Services
@using System.Reflection
@inject AppConfigManager AppConfig
@{ 
    var themeColor = AppConfig.Get("[App]ThemeColor", "#c670ff");
    var appVersion = Assembly.GetExecutingAssembly()
        .GetCustomAttribute<AssemblyInformationalVersionAttribute>()?.InformationalVersion
        ?? Assembly.GetExecutingAssembly().GetName().Version?.ToString(3)
        ?? "0.0.0";
    
    var dtShowSeconds = AppConfig.Get("[DateTime]ShowSeconds", "false");
    var dtUse12Hour = AppConfig.Get("[DateTime]Use12Hour", "false");
    var dtDateFormat = AppConfig.Get("[DateTime]DateFormat", "yyyy-mm-dd");
    var dtDateSeparator = AppConfig.Get("[DateTime]DateSeparator", "-");
    var showSecondsBool = dtShowSeconds?.ToLower() == "true" ? "True" : "False";
    var use12HourBool = dtUse12Hour?.ToLower() == "true" ? "True" : "False";
    var dateFormatStr = dtDateFormat ?? "yyyy-mm-dd";
    var dateSeparatorStr = dtDateSeparator ?? "-";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - THMI Mod Manager</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/cursor-selector.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/settings.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/file-browser.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/oojs-ui/oojs-ui-wikimediaui.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/sidebar-oojs-ui.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/oojs-ui-theme.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/oojs-ui-dialog.css" asp-append-version="true" />
    <style>
        h1 {
            color: @@themeColor !important;
        }
    </style>
    @await RenderSectionAsync("Styles", required: false)
    <style>
        /* Ensure main content doesn't sit under fixed sidebar on md+ */
        @@media (min-width: 768px) {
            #mainContent { margin-left: 260px; }
        }
        /* Remove padding-top from body since sidebar is now fixed */
        body {
            padding-top: 0 !important;
        }
        /* Custom cursor styles */
        .custom-cursor {
            cursor: url('@Url.Content("~/Resources/Cursor.cur")'), auto !important;
        }
        .custom-cursor * {
            cursor: url('@Url.Content("~/Resources/Cursor.cur")'), auto !important;
        }
        
        /* 全局轻度动画效果 */
        /* 页面淡入效果 */
        @@keyframes fadeIn {
            from { opacity: 0; transform: translateY(10px); }
            to { opacity: 1; transform: translateY(0); }
        }
        
        /* 标题下滑效果 */
        @@keyframes slideInDown {
            from { opacity: 0; transform: translateY(-20px); }
            to { opacity: 1; transform: translateY(0); }
        }
        
        /* 按钮悬停脉冲效果 */
        @@keyframes pulse {
            0% { transform: scale(1); }
            50% { transform: scale(1.02); }
            100% { transform: scale(1); }
        }
        
        /* 渐入上移效果 */
        @@keyframes fadeInUp {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }
        
        /* 应用动画到页面元素 */
        #mainContent {
            animation: fadeIn 0.5s ease-out;
        }
        
        h1, h2, h3, h4, h5, h6 {
            animation: slideInDown 0.5s ease-out;
        }
        
        .btn {
            transition: all 0.2s ease-in-out;
        }
        
        .btn:hover {
            animation: pulse 0.3s ease-in-out;
        }
        
        .form-control, .form-select, .form-check-input {
            animation: fadeInUp 0.3s ease-out;
        }
        
        /* 卡片悬停效果 */
        .card {
            transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
        }
        
        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }
        
        /* 导航链接悬停效果 */
        .nav-link {
            transition: all 0.2s ease-in-out;
        }
        
        .nav-link:hover {
            transform: translateX(5px);
        }
        
        /* 时间显示样式 */
        .oojs-ui-sidebar-time {
            font-size: 0.85rem;
            color: var(--color-text-muted, #72777d);
            margin-top: 4px;
            font-family: var(--font-family-sans-serif, sans-serif);
            letter-spacing: 0.02em;
        }
        
        /* 移动端顶部栏时间显示 */
        .navbar-time-display {
            font-size: 0.9rem;
            color: #72777d;
        }
        
        /* 固定顶部时间栏 - 与侧边栏等宽等高 */
        .top-time-bar {
            position: sticky;
            top: 0;
            width: 100%;
            height: 56px;
            background-color: #ffffff;
            border-bottom: 1px solid #eaecf0;
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 0 24px;
            box-sizing: border-box;
            z-index: 100;
        }
        
        .top-time-text {
            font-size: 0.9rem;
            color: #54595d;
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
            letter-spacing: 0.02em;
            white-space: nowrap;
        }
        
        .session-time-display {
            font-size: 0.9rem;
            color: #54595d;
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
            letter-spacing: 0.02em;
            white-space: nowrap;
            cursor: default;
        }
        
        .session-time-display .time-value {
            text-decoration: none;
        }
        
        .session-time-display .time-value.completed {
            text-decoration: line-through;
            color: #72777d;
        }
        
        .oojs-button-danger {
            background-color: #d73333;
            color: #ffffff;
            border: 1px solid #d73333;
            padding: 6px 12px;
            font-size: 0.875rem;
            border-radius: 2px;
            cursor: pointer;
            transition: background-color 0.2s;
        }
        
        .oojs-button-danger:hover {
            background-color: #b32424;
        }
        
        .oojs-button-danger:active {
            background-color: #a61721;
        }
        
        .oojs-button-danger i {
            margin-right: 4px;
        }
        
        /* 侧边栏调整 */
        .oojs-ui-sidebar {
            z-index: 1040;
        }
        
        /* 主内容区域 */
        #mainContent {
            margin-left: 260px;
            min-height: 100vh;
        }
    </style>
</head>
