    <script>
        const serverDateTimeSettings = {
            showSeconds: document.body.getAttribute('data-show-seconds') === 'True',
            use12Hour: document.body.getAttribute('data-use-12hour') === 'True',
            dateFormat: document.body.getAttribute('data-date-format') || 'yyyy-mm-dd',
            dateSeparator: document.body.getAttribute('data-date-separator') || '-'
        };
        
        const dateTimeSettings = {
            showSeconds: localStorage.getItem('datetimeShowSeconds') === 'true' ? true : (serverDateTimeSettings.showSeconds),
            use12Hour: localStorage.getItem('datetimeUse12Hour') === 'true' ? true : (serverDateTimeSettings.use12Hour),
            dateFormat: localStorage.getItem('datetimeDateFormat') || serverDateTimeSettings.dateFormat,
            dateSeparator: localStorage.getItem('datetimeDateSeparator') || serverDateTimeSettings.dateSeparator
        };
        
        window.dateTimeSettings = dateTimeSettings;
        
        function formatTime(date, options) {
            const showSeconds = dateTimeSettings.showSeconds;
            const use12Hour = dateTimeSettings.use12Hour;
            
            const timeOptions = {
                hour: 'numeric',
                minute: '2-digit',
                hour12: use12Hour
            };
            
            if (showSeconds) {
                timeOptions.second = '2-digit';
            }
            
            return date.toLocaleTimeString('en-US', timeOptions);
        }
        
        function formatDate(date, format, separator) {
            const year = date.getFullYear();
            const month = String(date.getMonth() + 1).padStart(2, '0');
            const day = String(date.getDate()).padStart(2, '0');
            const displayMonth = date.toLocaleDateString(navigator.language || 'en-US', { month: 'short' });
            const displayDay = date.getDate();
            
            switch (format) {
                case 'dd-mm-yyyy':
                    return `${day}${separator}${month}${separator}${year}`;
                case 'mm-dd-yyyy':
                    return `${month}${separator}${day}${separator}${year}`;
                case 'yyyy/mm/dd':
                    return `${year}${separator}${month}${separator}${day}`;
                case 'month-dd':
                    return `${displayMonth} ${displayDay}`;
                case 'dd-month':
                    return `${displayDay} ${displayMonth}`;
                default: // yyyy-mm-dd
                    return `${year}${separator}${month}${separator}${day}`;
            }
        }
        
        function updateTimeDisplay() {
            const now = new Date();
            const timeStr = formatTime(now);
            const dateStr = formatDate(now, dateTimeSettings.dateFormat, dateTimeSettings.dateSeparator);
            const fullStr = `${dateStr}  ${timeStr}`;
            
            const topTimeDisplay = document.getElementById('topTimeDisplay');
            
            if (topTimeDisplay) {
                topTimeDisplay.textContent = fullStr;
            }
        }
        
        function initTimeDisplay() {
            updateTimeDisplay();
            setInterval(updateTimeDisplay, 1000);
        }
        
        document.addEventListener('DOMContentLoaded', function() {
            initTimeDisplay();
        });
        
        window.dateTimeSettings = dateTimeSettings;
        
        // 会话时长管理
        const sessionTimeManager = {
            interval: null,
            updateInterval: 1000,
            currentState: {
                isRunning: false,
                formattedTime: "00:00:00",
                totalSeconds: 0
            },
            startTime: null,
            accumulatedSeconds: 0,
            
            async init() {
                await this.updateState();
                this.startPolling();
            },
            
            async updateState() {
                try {
                    const response = await fetch('/api/launcher/session-time');
                    if (response.ok) {
                        const data = await response.json();
                        const previousState = this.currentState.isRunning;
                        this.currentState = data;
                        
                        // 如果游戏刚开始运行，记录开始时间
                        if (data.isRunning && !previousState) {
                            this.startTime = Date.now();
                            this.accumulatedSeconds = data.totalSeconds || 0;
                        }
                        
                        // 更新UI
                        this.updateDisplay();
                    }
                } catch (error) {
                    console.error('Failed to update session time:', error);
                }
            },
            
            updateDisplay() {
                const timeElement = document.getElementById('sessionTimeValue');
                if (!timeElement) return;
                
                let displayTime = this.currentState.formattedTime;
                
                // 如果正在运行，实时更新显示
                if (this.currentState.isRunning && this.startTime) {
                    const elapsedSeconds = this.accumulatedSeconds + (Date.now() - this.startTime) / 1000;
                    displayTime = this.formatTime(elapsedSeconds);
                }
                
                timeElement.textContent = displayTime;
                
                // 根据状态添加/移除删除线
                if (this.currentState.isRunning) {
                    timeElement.classList.remove('completed');
                } else {
                    timeElement.classList.add('completed');
                }
            },
            
            formatTime(totalSeconds) {
                const seconds = Math.floor(totalSeconds);
                const days = Math.floor(seconds / 86400);
                const hours = Math.floor((seconds % 86400) / 3600);
                const minutes = Math.floor((seconds % 3600) / 60);
                const secs = seconds % 60;
                
                if (days > 0) {
                    return `${days}:${hours.toString().padStart(2, '0')}:${minutes.toString().padStart(2, '0')}:${secs.toString().padStart(2, '0')}`;
                } else {
                    return `${hours.toString().padStart(2, '0')}:${minutes.toString().padStart(2, '0')}:${secs.toString().padStart(2, '0')}`;
                }
            },
            
            startPolling() {
                // 立即更新一次
                this.updateDisplay();
                
                // 每秒更新显示
                this.interval = setInterval(() => {
                    if (this.currentState.isRunning) {
                        this.updateDisplay();
                    }
                }, this.updateInterval);
                
                // 每5秒从服务器同步状态（检测游戏开始/结束）
                setInterval(() => {
                    this.updateState();
                }, 5000);
            },
            
            stop() {
                if (this.interval) {
                    clearInterval(this.interval);
                    this.interval = null;
                }
            }
        };
        
        // 页面加载完成后初始化会话时长管理
        document.addEventListener('DOMContentLoaded', function() {
            sessionTimeManager.init();
        });
        
        function showExitConfirmation() {
            const exitText = document.getElementById('localizedExitConfirm')?.value || 'Are you sure you want to exit?';
            const confirmText = document.getElementById('localizedExitConfirmButton')?.value || 'Exit';
            const cancelText = document.getElementById('localizedExitCancelButton')?.value || 'Cancel';
            
            ModalUtils.confirmExit('', exitText, function() {
                fetch('/api/config/exit', {
                    method: 'POST',
                    headers: {
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || ''
                    }
                })
                .then(response => {
                    if (response.ok) {
                        console.log('Application exit request sent');
                        setTimeout(function() {
                            window.location.href = 'about:blank';
                        }, 500);
                    } else {
                        console.error('Failed to send exit request');
                    }
                })
                .catch(error => {
                    console.error('Error sending exit request:', error);
                });
            }, null, {
                confirmText: confirmText,
                cancelText: cancelText
            });
        }
    </script>

